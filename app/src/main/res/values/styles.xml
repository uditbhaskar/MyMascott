<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="iv_mascot_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">360dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tv_details_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:background">@drawable/background_tv</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>